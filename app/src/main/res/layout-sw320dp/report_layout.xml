<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#292929"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <soup.neumorphism.NeumorphButton
                android:id="@+id/report_cancel"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/cancel"
                android:textSize="10dp"
                android:textColor="#F2634D"
                app:neumorph_shadowElevation="3dp"
                app:neumorph_shadowColorLight="#444444"
                app:neumorph_shadowColorDark="@color/design_dark_default_color_shadow_dark"
                app:neumorph_backgroundColor="#292929"
                app:neumorph_shapeType="flat"
                style="@style/Widget.Neumorph.Button"
                />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/report_print"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/confirm"
                android:textSize="10dp"
                android:textColor="#FF9D2B"
                app:neumorph_shadowElevation="3dp"
                app:neumorph_shadowColorLight="#444444"
                app:neumorph_shadowColorDark="@color/design_dark_default_color_shadow_dark"
                app:neumorph_backgroundColor="#292929"
                app:neumorph_shapeType="flat"
                style="@style/Widget.Neumorph.Button"
                />

        </LinearLayout>

        <ExpandableListView
            android:id="@+id/report_list_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:groupIndicator="@null"
            />


    </LinearLayout>
</LinearLayout>